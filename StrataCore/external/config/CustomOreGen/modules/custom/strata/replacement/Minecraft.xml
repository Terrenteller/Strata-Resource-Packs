<?xml version="1.0" encoding="UTF-8"?>

<ConfigSection>

  <IfCondition condition=":=?blockExists('strata:coal_ore')">

    <OptionChoice name="StrataReplaceCoalOre" default=":=false" displayState=":=if(?StrataReplaceAll, &quot;hidden&quot;, &quot;shown&quot;)" displayGroup="groupStrataReplacements">
      <Description>Minecraft</Description>
      <DisplayName>Replace coal?</DisplayName>
      <Choice value="true" displayValue="Yes" />
      <Choice value="false" displayValue="No" />
    </OptionChoice>

    <IfCondition condition=":=?StrataActive &amp; ( ?StrataReplaceAll | ?StrataReplaceCoalOre )">
      <Substitute name="CoalToStrata" block="strata:coal_ore">
        <ReplacesOre block="oreCoal" />
        <ReplacesOre block="oreBlockCoal_vanilla" /> <!-- Geolosys -->
      </Substitute>
      <Substitute name="CoalSampleToStrata" block="strata:coal_sample">
        <Replaces block="geolosys:ore_sample_vanilla:0" />
      </Substitute>
    </IfCondition>

  </IfCondition>

